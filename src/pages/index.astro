---
import Layout from '../layouts/Layout.astro';
import { client } from '../lib/microcms';

// SEO用の設定
const pageTitle = "江東区・清澄白河の出張ピアノレッスン | 髙橋遊月ピアノ教室";
const pageDescription = "江東区・清澄白河エリアを中心に活動する講師による出張ピアノ教室です。";

// microCMSからお知らせを取得（最新3件）
const response = await client.get({
  endpoint: "news",
  queries: { limit: 3, fields: ["id", "title", "publishedAt"] }
});
const newsContents = response.contents;
---

<Layout title={pageTitle} description={pageDescription}>
  {/* グローバルスタイルで背景色を強制上書き（ヘッダー等はLayout依存ですが、メインエリアの世界観を作ります） */}
  <main class="bg-[#1A1A1A] text-[#E5E5E5] font-serif relative overflow-hidden min-h-screen">
    
    {/* Hero Section: 暗めのオーバーレイでシックに */}
    <section class="relative h-[90vh] flex items-center justify-center">
      <div class="absolute inset-0 z-0">
        <img 
          src="https://images.unsplash.com/photo-1552422535-c45813c61732?q=80&w=2070&auto=format&fit=crop" 
          alt="ピアノレッスン" 
          class="w-full h-full object-cover opacity-30"
        />
        <div class="absolute inset-0 bg-gradient-to-b from-[#1A1A1A]/80 via-transparent to-[#1A1A1A]"></div>
      </div>

      <div class="relative z-10 text-center px-6 max-w-4xl border-y border-[#D4AF37]/30 py-16 backdrop-blur-sm">
        <p class="text-[#D4AF37] text-sm md:text-base tracking-[0.3em] uppercase mb-6">Private Piano Lesson</p>
        <h1 class="text-3xl md:text-6xl font-bold mb-8 leading-tight tracking-widest text-white drop-shadow-lg">
          音色が紡ぐ、<br/>豊かな時間。
        </h1>
        <p class="text-gray-300 text-base md:text-lg leading-loose font-light">
          ご自宅のピアノで奏でる、あなただけの音楽。<br/>
          江東区・清澄白河エリアの出張レッスン
        </p>
      </div>
    </section>
    
    {/* News Section: リスト形式でスタイリッシュに */}
    <section class="py-24 px-6 max-w-4xl mx-auto border-b border-[#333]">
      <div class="flex justify-between items-end mb-12">
        <h2 class="text-3xl italic text-[#D4AF37]">News</h2>
        <a href="/news" class="text-xs text-[#D4AF37] border-b border-[#D4AF37] pb-1 hover:text-white transition-colors tracking-widest">VIEW ALL</a>
      </div>
      <div class="space-y-6">
        {newsContents.length > 0 ? (
          newsContents.map((item: any) => (
            <a href={`/news/${item.id}`} class="block group">
              <div class="flex flex-col md:flex-row md:items-center gap-6 py-4 border-b border-[#333] group-hover:border-[#D4AF37] transition-colors">
                <span class="text-xs text-[#888] font-mono">
                  {new Date(item.publishedAt).toLocaleDateString('ja-JP')}
                </span>
                <h3 class="text-lg font-medium text-gray-300 group-hover:text-white transition-colors">
                  {item.title}
                </h3>
                <span class="hidden md:block ml-auto text-xs text-[#D4AF37] opacity-0 group-hover:opacity-100 transition-all transform translate-x-[-10px] group-hover:translate-x-0">
                   Read →
                </span>
              </div>
            </a>
          ))
        ) : (
          <p class="text-sm text-gray-500">現在お知らせはありません。</p>
        )}
      </div>
    </section>

    {/* Instructor Profile: ダークな背景に浮かび上がる写真 */}
    <section class="py-32 relative">
      <div class="max-w-6xl mx-auto px-6">
        <div class="grid md:grid-cols-2 gap-16 items-center">
          <div class="relative order-2 md:order-1">
            <h2 class="text-4xl font-bold mb-2 text-white">高橋 遊月</h2>
            <p class="text-[#D4AF37] text-lg italic mb-8 font-light">Yuzuki Takahashi</p>
            <div class="space-y-6 text-gray-400 leading-relaxed text-justify">
              <p class="border-l-2 border-[#D4AF37] pl-4 text-white">東京音楽大学 卒業</p>
              <p>
                江東区・清澄白河を中心に、ご自宅への出張ピアノレッスンを行っております。
                これまで多くの門下生を指導し、音楽を通じた心の交流を大切にしてきました。
              </p>
              <p>
                「出張レッスン」だからこそ、移動の負担なく、いつもの慣れ親しんだピアノでリラックスして学んでいただけます。
                きめ細やかな指導で、技術だけでなく、音楽を一生のパートナーにするお手伝いをいたします。
              </p>
            </div>
          </div>
          <div class="order-1 md:order-2 relative">
            <div class="aspect-[3/4] overflow-hidden shadow-[20px_20px_0_0_rgba(212,175,55,0.1)] border border-[#333]">
              <img src="/senzai.png" alt="高橋遊月" class="w-full h-full object-cover filter grayscale hover:grayscale-0 transition-all duration-700"/>
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Movie Section: シネマティックな配置 */}
    <section class="py-24 bg-black/50">
      <div class="max-w-5xl mx-auto px-6 text-center">
        <h2 class="text-2xl text-[#D4AF37] mb-12 tracking-widest uppercase">Introduction Movie</h2>
        <div class="aspect-video w-full shadow-2xl border border-[#333]">
          <iframe 
            src="https://www.youtube.com/embed/8iY5cbtwxiM?si=zOM7JXIwvIrbpg-_" 
            title="YouTube video player" 
            class="w-full h-full"
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
            referrerpolicy="strict-origin-when-cross-origin" 
            allowfullscreen>
          </iframe>
        </div>
        <p class="mt-8 text-gray-500 text-sm">レッスンの雰囲気や演奏の様子をご覧ください。</p>
      </div>
    </section>

    {/* Fees & System: 高級レストランのメニューのようなデザイン */}
    <section class="py-32 px-6">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl font-bold text-white mb-2">Lesson Fees</h2>
          <div class="w-16 h-[1px] bg-[#D4AF37] mx-auto"></div>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
           {[
             { min: "30", price: "5,000" },
             { min: "45", price: "7,500" },
             { min: "60", price: "10,000" }
           ].map((plan) => (
             <div class="border border-[#333] p-10 text-center hover:border-[#D4AF37] hover:bg-[#D4AF37]/5 transition-all duration-300">
               <p class="text-[#D4AF37] text-sm mb-4 tracking-widest">{plan.min} MIN</p>
               <p class="text-3xl font-bold text-white mb-2">{plan.price}<span class="text-sm font-normal ml-1">円</span></p>
               <p class="text-xs text-gray-500">1レッスン</p>
             </div>
           ))}
        </div>
        
        <div class="mt-12 text-center">
          <p class="text-gray-400 text-sm mb-8">月1回〜4回まで、ライフスタイルに合わせて受講頻度をお選びいただけます。</p>
          <a href="/lesson" class="inline-block border border-white/20 text-white px-10 py-3 text-xs tracking-[0.2em] hover:bg-white hover:text-black transition-colors">
            MORE DETAILS
          </a>
        </div>
      </div>
    </section>

    {/* Service Area: ダークマップ風 */}
    <section class="py-24 bg-[#111] border-t border-[#333]">
      <div class="max-w-6xl mx-auto px-6 flex flex-col md:flex-row gap-12">
        <div class="md:w-1/3">
          <h2 class="text-3xl font-bold text-white mb-6">Service Area</h2>
          <p class="text-gray-400 text-sm leading-loose mb-8">
            <span class="text-[#D4AF37]">清澄白河・門前仲町</span>を中心に、自転車または公共交通機関で伺える範囲で活動しています。
          </p>
          <div class="flex flex-wrap gap-2">
            {["清澄白河", "門前仲町", "木場", "深川", "森下", "白河", "三好", "平野", "佐賀", "永代", "福住", "冬木", "牡丹", "古石場"].map(area => (
              <span class="text-[10px] border border-[#333] text-gray-500 px-3 py-1">
                {area}
              </span>
            ))}
          </div>
        </div>
        <div class="md:w-2/3 h-[400px] grayscale opacity-80 hover:grayscale-0 transition-all duration-500">
           <iframe 
              src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3241.066480572621!2d139.79634597628873!3d35.682701130107765!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x60188944510b6563%3A0xc3f7a63d91965a39!2z5riF5r6E55m95rKz6aeF!5e0!3m2!1sja!2sjp!4v1711234567890!5m2!1sja!2sjp" 
              width="100%" 
              height="100%" 
              style="border:0;"
              allowfullscreen="" 
              loading="lazy"
              referrerpolicy="no-referrer-when-downgrade">
            </iframe>
        </div>
      </div>
    </section>

    {/* Contact: シンプルかつ強いインパクト */}
    <section id="contact" class="py-32 px-6 bg-[#D4AF37]">
      <div class="max-w-2xl mx-auto text-center text-[#1A1A1A]">
        <h2 class="text-4xl font-bold mb-8 tracking-wider">CONTACT</h2>
        <p class="mb-10 text-sm font-bold tracking-widest leading-loose opacity-80">
            体験レッスン・お問い合わせはこちら
        </p>
        <a href="/contact" class="inline-block bg-[#1A1A1A] text-[#D4AF37] px-16 py-4 font-bold tracking-[0.2em] shadow-xl hover:bg-white hover:text-[#1A1A1A] transition-all">
          FORM
        </a>
      </div>
    </section>

  </main>
</Layout>