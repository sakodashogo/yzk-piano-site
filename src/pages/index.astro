---
import Layout from '../layouts/Layout.astro';
import { client } from '../lib/microcms';

const pageTitle = "江東区・清澄白河の出張ピアノレッスン | 髙橋遊月ピアノ教室";
const pageDescription = "江東区・清澄白河エリアを中心に活動する講師による出張ピアノ教室です。";

const response = await client.get({
  endpoint: "news",
  queries: { limit: 3, fields: ["id", "title", "publishedAt"] }
});
const newsContents = response.contents;
---

<Layout title={pageTitle} description={pageDescription}>
  {/* シャンパン・ラスター用のスタイル */}
  <style is:global>
    body {
      background: linear-gradient(to bottom, #fffbf0, #ffffff) !important;
      color: #6d625b !important;
    }
    .text-champagne { color: #cbbba0; }
    .bg-glass {
        background-color: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.8);
    }
    h1, h2, h3 { font-family: "Shippori Mincho", serif; }
  </style>

  <main class="font-serif overflow-hidden">
    
    {/* Hero Section */}
    <section class="min-h-screen flex items-center justify-center relative px-6 pt-20">
      {/* 背景の光の玉 */}
      <div class="absolute top-0 left-1/4 w-[500px] h-[500px] bg-[#fdf5e6] rounded-full mix-blend-multiply filter blur-3xl opacity-60 animate-pulse"></div>
      <div class="absolute bottom-0 right-1/4 w-[600px] h-[600px] bg-[#fffaf0] rounded-full mix-blend-multiply filter blur-3xl opacity-60"></div>

      <div class="relative z-10 text-center max-w-4xl w-full">
        <div class="inline-block mb-10 border-b border-[#cbbba0] pb-2">
             <span class="text-[#cbbba0] tracking-[0.3em] text-sm font-light">YUZUKI PIANO SCHOOL</span>
        </div>
        
        <h1 class="text-4xl md:text-7xl text-[#544a40] mb-12 leading-tight font-medium tracking-wide">
          <span class="text-2xl md:text-3xl block mb-4 font-light text-[#8c8279]">日常に彩りを添える、</span>
          心豊かなピアノの時間
        </h1>
    
        <div class="flex justify-center gap-6">
            <p class="text-[#8c8279] text-sm leading-loose font-sans tracking-wide">
            清澄白河エリアの出張レッスン。<br/>
            いつもの場所で、特別な音楽体験を。
            </p>
        </div>
      </div>
    </section>
    
    {/* News Section */}
    <section class="py-24 max-w-5xl mx-auto px-6 relative z-10">
      <div class="flex items-end justify-between mb-8 px-4">
        <h2 class="text-3xl text-[#544a40] italic">News</h2>
        <a href="/news" class="text-xs text-[#cbbba0] tracking-widest hover:text-[#8c8279]">VIEW ALL</a>
      </div>

      <div class="bg-glass rounded-xl shadow-[0_8px_30px_rgba(203,187,160,0.1)] p-8">
        <div class="divide-y divide-[#f0ebd8]">
            {newsContents.length > 0 ? (
            newsContents.map((item: any) => (
                <a href={`/news/${item.id}`} class="block py-6 group hover:pl-2 transition-all duration-300">
                    <div class="flex flex-col md:flex-row md:items-center gap-4">
                        <span class="text-xs text-[#cbbba0] font-sans">
                        {new Date(item.publishedAt).toLocaleDateString('ja-JP')}
                        </span>
                        <span class="text-base text-[#6d625b] group-hover:text-[#9e8f7a] transition-colors font-medium">
                        {item.title}
                        </span>
                        <span class="ml-auto text-xs text-[#e0d8cc] group-hover:text-[#cbbba0]">→</span>
                    </div>
                </a>
            ))
            ) : (
            <p class="text-center text-[#cbbba0] text-sm">現在お知らせはありません</p>
            )}
        </div>
      </div>
    </section>

    {/* Instructor Section */}
    <section class="py-32 relative">
      <div class="absolute inset-0 bg-white/50 skew-y-3 transform origin-top-left -z-10"></div>
      <div class="max-w-6xl mx-auto px-6">
        <div class="bg-white rounded-2xl shadow-xl overflow-hidden">
            <div class="grid md:grid-cols-2">
                <div class="relative h-[400px] md:h-auto">
                    <img src="/senzai.png" alt="高橋遊月" class="w-full h-full object-cover"/>
                    <div class="absolute inset-0 bg-gradient-to-t from-[#544a40]/50 to-transparent md:hidden"></div>
                </div>
                <div class="p-10 md:p-16 flex flex-col justify-center bg-[#fffbf7]">
                    <span class="text-[#cbbba0] italic font-serif text-lg mb-4">Instructor Profile</span>
                    <h3 class="text-3xl font-medium mb-8 text-[#544a40]">高橋 遊月</h3>
                    
                    <div class="space-y-6 text-[#6d625b] text-sm leading-8 font-sans">
                        <p class="font-bold border-l-2 border-[#cbbba0] pl-3 text-[#544a40]">東京音楽大学 卒業</p>
                        <p>
                            江東区・清澄白河を中心に、ご自宅への出張ピアノレッスンを行っております。
                            音楽を通じて、生活に「潤い」と「輝き」をお届けします。
                        </p>
                        <p>
                            慣れ親しんだご自宅のピアノで、リラックスして受講いただけます。
                            お子様から大人の方まで、一人ひとりのペースに寄り添った丁寧な指導を心がけています。
                        </p>
                    </div>
                </div>
            </div>
        </div>
      </div>
    </section>

    {/* Movie Section */}
    <section class="py-24 px-6">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl text-[#544a40] mb-4 italic">Movie</h2>
        <p class="text-[#cbbba0] text-xs tracking-widest mb-12">レッスンの雰囲気</p>
        
        <div class="rounded-2xl overflow-hidden shadow-2xl shadow-[#cbbba0]/20 border-[4px] border-white">
             <div class="aspect-video w-full">
                <iframe 
                    src="https://www.youtube.com/embed/8iY5cbtwxiM?si=zOM7JXIwvIrbpg-_" 
                    title="YouTube video player" 
                    class="w-full h-full"
                    frameborder="0" 
                    allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" 
                    referrerpolicy="strict-origin-when-cross-origin" 
                    allowfullscreen>
                </iframe>
            </div>
        </div>
      </div>
    </section>

    {/* Fees Section */}
    <section class="py-32 relative bg-gradient-to-t from-[#fdfbf7] to-white">
      <div class="max-w-5xl mx-auto px-6">
        <div class="text-center mb-16">
            <h2 class="text-3xl text-[#544a40] mb-4">Lesson Fees</h2>
            <div class="flex justify-center gap-1">
                <span class="w-1 h-1 rounded-full bg-[#cbbba0]"></span>
                <span class="w-1 h-1 rounded-full bg-[#cbbba0]"></span>
                <span class="w-1 h-1 rounded-full bg-[#cbbba0]"></span>
            </div>
        </div>
        
        <div class="grid md:grid-cols-3 gap-6">
            {[
                { time: '30 min', price: '5,000' },
                { time: '45 min', price: '7,500' },
                { time: '60 min', price: '10,000' }
            ].map(plan => (
                <div class="bg-white p-8 rounded-xl shadow-sm hover:shadow-lg transition-all border border-[#f7f3eb] text-center group">
                    <span class="block text-[#cbbba0] text-xs font-bold tracking-widest mb-4 uppercase">{plan.time}</span>
                    <span class="text-3xl font-serif text-[#544a40] group-hover:text-[#9e8f7a] transition-colors">¥{plan.price}</span>
                </div>
            ))}
        </div>
        <div class="text-center mt-12">
            <a href="/lesson" class="inline-block bg-[#f7f3eb] text-[#8c8279] px-8 py-3 rounded-full text-xs font-bold tracking-widest hover:bg-[#cbbba0] hover:text-white transition-all">
                料金・システム詳細
            </a>
        </div>
      </div>
    </section>

    {/* Area & Contact Combined */}
    <section class="py-24 px-6 bg-[#fffaf5]">
        <div class="max-w-4xl mx-auto">
            {/* Area */}
            <div class="mb-20 text-center">
                 <h2 class="text-2xl text-[#544a40] mb-8 font-medium">Service Area</h2>
                 <p class="text-[#6d625b] text-sm mb-6 font-sans">
                    <span class="border-b border-[#cbbba0] pb-1">清澄白河・門前仲町</span> エリアの出張レッスン
                 </p>
                <div class="flex flex-wrap justify-center gap-2">
                    {["清澄白河", "門前仲町", "木場", "深川", "森下", "白河", "三好", "平野"].map(area => (
                        <span class="text-xs text-[#8c8279] bg-white px-3 py-1 shadow-sm rounded-md">
                        {area}
                        </span>
                    ))}
                </div>
            </div>

            {/* Contact */}
            <div class="bg-white p-12 rounded-[2rem] shadow-xl text-center relative overflow-hidden">
                <div class="absolute top-0 left-0 w-full h-2 bg-[#cbbba0]"></div>
                <h2 class="text-3xl font-medium text-[#544a40] mb-6">Contact</h2>
                <p class="mb-10 text-sm text-[#8c8279] leading-loose font-sans">
                    体験レッスンのお申し込み・お問い合わせ
                </p>
                <a href="/contact" class="inline-block bg-[#544a40] text-white px-10 py-4 rounded-lg shadow-lg hover:bg-[#3d362e] transition-all tracking-[0.2em] text-sm">
                    お問い合わせフォーム
                </a>
            </div>
        </div>
    </section>

  </main>
</Layout>