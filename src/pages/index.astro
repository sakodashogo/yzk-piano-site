            class="flex overflow-x-auto gap-6 px-[7.5%] md:px-[15%] pb-8 items-center transition-opacity duration-500" 
   
            style="scrollbar-width: none; -ms-overflow-style: none; visibility: hidden;
opacity: 0;"
          >
            {videoIds.map((id, index) => (
